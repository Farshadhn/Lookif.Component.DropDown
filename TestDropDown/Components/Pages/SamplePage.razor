@page "/"
@using Lookif.Component.DropDown.Main
@using Lookif.Component.DropDown.Basic
@using Lookif.Component.DropDown.Complex
<PageTitle>Lookif Dropdown Component - Home</PageTitle>

<div class="container mt-4">
    <h1 class="text-center mb-4">Lookif Dropdown Component</h1>
    <p class="text-center text-muted mb-4">Comprehensive dropdown component with RTL/LTR support and enum binding</p>

    <div class="row">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Single Choice</h5>
                    <p class="card-text">RTL and LTR support for single selection dropdowns</p>
                    <a href="/single" class="btn btn-primary">View Samples</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Multiple Choice</h5>
                    <p class="card-text">RTL and LTR support for multiple selection dropdowns</p>
                    <a href="/multiple" class="btn btn-primary">View Samples</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Enum Support</h5>
                    <p class="card-text">Automatic enum binding with custom display names</p>
                    <a href="/enum" class="btn btn-primary">View Samples</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3>Features</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>RTL/LTR Support</h5>
                            <ul>
                                <li>Right-to-Left (RTL) layout support</li>
                                <li>Left-to-Right (LTR) layout support</li>
                                <li>Automatic arrow positioning</li>
                                <li>Text alignment adaptation</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h5>Enum Binding</h5>
                            <ul>
                                <li>Automatic enum conversion</li>
                                <li>Custom display names</li>
                                <li>Description attribute support</li>
                                <li>Type-safe enum handling</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
