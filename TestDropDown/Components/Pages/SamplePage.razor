@page "/"
@using Lookif.Component.DropDown.Main
@using Lookif.Component.DropDown.Basic
@using Lookif.Component.DropDown.Complex
<PageTitle>Dropdown Component Samples</PageTitle>

<div class="container mt-4">
    <h1 class="text-center mb-4">Lookif Dropdown Component Samples</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h3>Basic Dropdown (Single Choice)</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Enable/Disable Control:</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" @bind="basicEnabled" @bind:after="StateHasChanged" id="basicEnabled" />
                            <label class="form-check-label" for="basicEnabled">
                                Enable Basic Dropdown
                            </label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Select a Country:</label>
                        @if (countries is { Count: > 0 })
                        { 
                            <LFDropDown Records="@countries"
                                        Key="Id"
                                        Value="Name"
                                        SelectedOption="@basicSelectedOptions"
                                        ReturnValueChanged="@OnBasicSelectionChanged" />
                        }

                    </div>

                    <div class="alert alert-info">
                        <strong>Selected:</strong> @(basicSelectedText ?? "None")
                    </div>
                </div>
            </div>
        </div>

               <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h3>Complex Dropdown (Multiple Choice)</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Enable/Disable Control:</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" @bind="complexEnabled" @bind:after="StateHasChanged" id="complexEnabled" />
                            <label class="form-check-label" for="complexEnabled">
                                Enable Complex Dropdown
                            </label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Select Multiple Cities:</label>
                        <LFDropDown Disable="@(!complexEnabled)"
                                    Multiple="true"
                                    Records="@cities"
                                    Key="Id"
                                    Value="Name"
                                    SelectedOption="@complexSelectedOptions"
                                    ReturnValueChanged="@OnComplexSelectionChanged" />
                    </div>

                    <div class="alert alert-info">
                        <strong>Selected:</strong> @(complexSelectedText ?? "None")
                    </div>
                </div>
            </div>
        </div>  
    </div>

         <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3>Direct Component Usage Examples</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Single Choice Component</h5>
                            <LFDropDownSingleChoice Disable="@(!directSingleEnabled)"
                                                    Records="@colors"
                                                    Key="Id"
                                                    Value="Name"
                                                    SelectedOption="@directSingleSelected"
                                                    PerformUpdate="@OnDirectSingleChanged" />
                            <div class="form-check mt-2">
                                <input class="form-check-input" type="checkbox" @bind="directSingleEnabled" @bind:after="StateHasChanged" id="directSingleEnabled" />
                                <label class="form-check-label" for="directSingleEnabled">
                                    Enable Direct Single Choice
                                </label>
                            </div>
                            <small class="text-muted">Selected: @(directSingleText ?? "None")</small>
                        </div>

                        <div class="col-md-6">
                            <h5>Multiple Choice Component</h5>
                            <LFDropDownMultipleChoice Disable="@(!directMultipleEnabled)"
                                                      Records="@fruits"
                                                      Key="Id"
                                                      Value="Name"
                                                      SelectedOption="@directMultipleSelected"
                                                      PerformUpdate="@OnDirectMultipleChanged" />
                            <div class="form-check mt-2">
                                <input class="form-check-input" type="checkbox" @bind="directMultipleEnabled" @bind:after="StateHasChanged" id="directMultipleEnabled" />
                                <label class="form-check-label" for="directMultipleEnabled">
                                    Enable Direct Multiple Choice
                                </label>
                            </div>
                            <small class="text-muted">Selected: @(directMultipleText ?? "None")</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3>Code Examples</h3>
                </div>
                <div class="card-body">
                    <h5>Basic Usage (Single Choice):</h5>
                    <pre><code>&lt;LFDropDown Disable="false"
           Records="@countries"
           Key="Id"
           Value="Name"
           SelectedOption="@basicSelectedOptions"
           ReturnValueChanged="@OnBasicSelectionChanged" /&gt;</code></pre>

                    <h5>Multiple Choice Usage:</h5>
                    <pre><code>&lt;LFDropDown Disable="false"
           Multiple="true"
           Records="@cities"
           Key="Id"
           Value="Name"
           SelectedOption="@complexSelectedOptions"
           ReturnValueChanged="@OnComplexSelectionChanged" /&gt;</code></pre>

                    <h5>Direct Component Usage:</h5>
                    <pre><code>&lt;LFDropDownSingleChoice Disable="false"
                       Records="@colors"
                       Key="Id"
                       Value="Name"
                       SelectedOption="@directSingleSelected"
                       PerformUpdate="@OnDirectSingleChanged" /&gt;

&lt;LFDropDownMultipleChoice Disable="false"
                         Records="@fruits"
                         Key="Id"
                         Value="Name"
                         SelectedOption="@directMultipleSelected"
                         PerformUpdate="@OnDirectMultipleChanged" /&gt;</code></pre>
                </div>
            </div>
        </div>
    </div> 
</div>
